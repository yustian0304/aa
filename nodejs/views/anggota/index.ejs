<div class="panel panel-default">
    <div class="panel-heading">Panel Heading</div>
	<div class="panel-body">
		<div class="col-sm-12" style="margin: 10px 0px 10px 0px;">
    		<a href="anggota/create" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-plus"></span> Tambah</a>
		</div>
		<div class="col-sm-12" style="margin: 10px 0px 10px 0px;">
			<table class="table table-bordered table-hover">
				<thead>
					<th>No</th>
					<th>Nama Anggota</th>
					<th>Alamat</th>
					<th>No Telepon</th>
					<th>Foto</th>
					<th style="text-align: center;width: 20%;">Aksi</th>
				</thead>
				<tbody>
					<% 
						no=1;
						result.forEach(function(value,el) { 
					%>
					<tr>
						<td><%= no %></td>
						<td><%= value['nama_anggota'] %></td>
						<td><%= value['alamat'] %></td>
						<td><%= value['no_telepon'] %></td>
						<td><%= value['foto'] %></td>
						<td style="text-align: center;width: 20%;">
							<a href="anggota/<%= value['id'] %>/update" class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
							<button class="btn btn-warning btn-xs" id="hapus" rel="<%= value['id'] %>" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-trash"></span> Hapus</button>
						</td>
					</tr>
					<% no++;
					}); %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <form  action="" method="POST" id="confirm_modal">
        <div class="modal-body">
	          <p>Apakah Anda yakin kan menghapus data ini?
	          	<input type="hidden" name="id_anggota" value="" id="id_anggota"></p>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-default">Save</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">batal</button>
        </div>
        </form>
      </div>
      
    </div>
  </div>


<script type="text/javascript">
// $(document).ready(function(){
$(document).on('click','#hapus',function(){
	$('#id_anggota').val($(this).attr('rel'));
	$('#confirm_modal').attr('action','anggota/'+$(this).attr('rel')+'/delete');
});
// });
</script>